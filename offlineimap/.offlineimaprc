[general]
accounts = disroot, airmail
pythonfile = ~/.offlineimap.py

[Account disroot]
localrepository = disroot-local
remoterepository = disroot-remote
synclabels = yes
autorefresh = 15
quick = 10
postsynchook = emacsclient -e '(mu4e-update-index)'

[Repository disroot-local]
type = Maildir
localfolders = ~/maildir/disroot

[Repository disroot-remote]
type = IMAP
remotehost = disroot.org
ssl = yes
maxconnections = 2
remoteuser = tfm@disroot.org
remotepasseval = get_pass("disroot.org")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
keepalive = 60
holdconnectionopen = yes

[Account airmail]
localrepository = airmail-local
remoterepository = airmail-remote
synclabels = yes
autorefresh = 15
quick = 10
postsynchook = emacsclient -e '(mu4e-update-index)'

[Repository airmail-local]
type = Maildir
localfolders = ~/maildir/airmail

[Repository airmail-remote]
type = IMAP
remotehost = airmail.org
ssl = yes
maxconnections = 2
remoteuser = tfm@airmail.cc
remotepasseval = get_pass("airmail.cc")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
keepalive = 60
holdconnectionopen = yes


